{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": [ "node_modules", "src" ]
            }
        }
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": ["error", 4],
        "no-underscore-dangle": ["error", { "allow": ["_count"] }]
    }
}
